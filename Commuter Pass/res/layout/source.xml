<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgimg5">
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="150dp"
    android:text="
    Select the Path :"
    android:id="@+id/pathselect"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:textSize="30dp"
    android:textColor="#0000ff"
    android:textStyle="bold"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Beach-Tambaram"
        android:id="@+id/btambaram"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.00"
        android:theme="@style/MyButton"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Beach-Central Thiruttani"
        android:id="@+id/bcentral"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.00"
        android:theme="@style/MyButton"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Beach-Velachery"
        android:id="@+id/bvelacherry"
        android:theme="@style/MyButton"/>
</LinearLayout>
